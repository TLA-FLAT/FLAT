function devel($form, &$form_state){
    $form = array();

    $form['fieldset'] = array(
        '#title' => t('Fieldset Title'),
        '#type' => 'fieldset',
    );

    $form['fieldset']['checkbox_trigger'] = array(
        '#title' => t('Add text field below options'),
        '#type' => 'checkbox',
        '#ajax' => array(
            'callback' => 'checkbox_trigger_ajax_callback',
            'wrapper' => 'container-info',
            'method' => 'replace',
            'effect' => 'fade',
        ),
    );

    $form['mytextcontainer'] = array(
        '#type' => 'container',
        '#weight' => 5,
        '#attributes' => array(
            'id' => array('container-info'),
            ),
        );

    // Adjust values of textfield based on trigger value
    $checked = isset($form_state['values']['checkbox_trigger']) ? $form_state['values']['checkbox_trigger'] : 0 ;

    if ($checked) {
        $message = "Trigger has been pushed";
        $title = 'Textfield title 1';
        $access = TRUE;
    } else {
        $message = "The trigger has NOT been pushed";
        $title = 'Textfield title 2';
        $access = FALSE;
    }

    $form['mytextcontainer']['textfield'] = array(
        '#type' => 'textfield',
        '#access' => $access,
        '#title' => $title,
        '#default_value' => t($message));

    $form['submit'] = array (
        '#type' => 'submit',
        '#value' => t('Select'),
        '#submit' => array('devel_form_submit'),
        '#validate' => array('devel_form_validate'));

    return $form;
}

