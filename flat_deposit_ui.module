                module_load_include('inc', 'flat_deposit_ui', 'inc/owncloud_api');
                $symlink = OC_ROOT . 'data/' . $form_state['user_name'] . '/files/' . $value;

                symlink (drupal_realpath($form_state['user_drupal_data_dir']) . '/' . $value . '/data', $symlink);

